<div id="welcome-container">
  <div class="row">
      <p id="notice"><%= notice %></p>
      <h1>Movements</h1>
      <table>
          <thead>
              <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th colspan="3"></th>
              </tr>
          </thead>
          <tbody>
              <% @movements.each do |movement| %>
              <tr>
                  <td><%= movement.name %></td>
                  <td><%= movement.description %></td>
                  <td><%= link_to 'Show', movement %></td>
                  <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
                  <td><%= link_to 'Destroy', movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
          </tbody>
      </table>
      <br>
      <%= link_to 'New Movement', new_movement_path %>
  </div>
  <div class="row">
      <p id="notice"><%= notice %></p>

      <h1>Artists</h1>

      <table>
          <thead>
              <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th colspan="3"></th>
              </tr>
          </thead>

          <tbody>
              <% @artists.each do |artist| %>
              <tr>
                  <td><%= artist.name %></td>
                  <td><%= artist.description %></td>
                  <td><%= link_to 'Show', artist %></td>
                  <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
                  <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
          </tbody>
      </table>

      <br>

      <%= link_to 'New Artist', new_artist_path %>

  </div>
</div>
